{
  "expo": {
    "name": "MoviKoox",
    "slug": "movikoox",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/movikoox_logo.png",

    "scheme": "movikooxapp",
    "userInterfaceStyle": "automatic",

    "newArchEnabled": true,

    "android": {
      "package": "com.movikoox.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/movikoox_logo.png",
        "backgroundColor": "#7A1F33"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/movikoox_logo.png",
          "resizeMode": "contain",
          "backgroundColor": "#7A1F33"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
